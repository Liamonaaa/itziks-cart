rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      // Customer site write (current behavior): anyone can create an order.
      allow create: if true;

      // TEMP for PIN-only admin page (client-side PIN is not real auth).
      // TODO: Replace with Firebase Auth + custom admin claims and remove this line.
      allow read, update: if true;

      // Future production rule (recommended):
      // allow read, update, delete: if request.auth != null
      //   && request.auth.token.admin == true;
    }
  }
}
